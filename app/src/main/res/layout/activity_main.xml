<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/bg"
>

    <com.test.voicecontroller.VoiceSegmentView
            android:background="#ccc"
            android:id="@+id/voiceView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    <RelativeLayout
            android:id="@+id/recyclerViewOuter"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
        <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/voice_line_bg"
                android:layout_centerVertical="true"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
                android:id="@+id/centerLine"
                android:layout_centerInParent="true"
                android:background="#f00"
                android:layout_width="2dp"
                android:layout_height="match_parent"
        />
        <View
                android:id="@+id/playShadow"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/play_shadow"
        />
        <ImageView
                android:id="@+id/play"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/play"
                android:layout_centerVertical="true"
        />

        <ImageView
                android:id="@+id/deleteSegment"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
        />

    </RelativeLayout>
    
    <Button
            android:id="@+id/add_daxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加搭戏位"
    />

    <Button
            android:id="@+id/add_yinxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加音效"
    />

</LinearLayout>